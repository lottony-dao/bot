{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./",
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": [
        "./env.d.ts",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
