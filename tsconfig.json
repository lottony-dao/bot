{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "rootDir": "./",
        "outDir": "./",
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/types",
            "./src/types"
        ],
        "paths": {
            "~/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "./env.d.ts",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
