generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model account {
  id         Int      @id @default(autoincrement())
  tg_id      BigInt   @unique
  name       String
  username   String[] @default([])
  created_at DateTime @default(now())

  rating_out rating_ledger[] @relation(name: "from")
  rating_in  rating_ledger[] @relation(name: "to")

  @@index([tg_id])
}

model rating_ledger {
  id              Int      @id @default(autoincrement())
  account_id_from Int
  account_id_to   Int
  value           Int
  created_at      DateTime @default(now())

  account_from account @relation(name: "from", fields: [account_id_from], references: [id])
  account_to   account @relation(name: "to", fields: [account_id_to], references: [id])

  @@index([account_id_from])
  @@index([account_id_to])
  @@index([account_id_from, account_id_to])
  @@index([account_id_to, account_id_from])
}
